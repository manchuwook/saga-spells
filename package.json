{
  "name": "saga-spells",
  "version": "1.0.0",
  "description": "A spell manager for SAGA TTRPG",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --config vitest.config.ts",
    "build:analyze": "cross-env ANALYZE=true vite build --config vitest.config.ts",
    "build:prod": "pnpm clean && vite build --config vitest.config.ts",
    "build:profile": "cross-env PROFILE=true pnpm build:prod",
    "build:measure": "cross-env MEASURE=true pnpm build:prod",
    "preview": "vite preview",
    "start": "vite",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true vite build --config vitest.config.ts && pnpm dlx serve -s dist",
    "lighthouse": "pnpm build:prod && pnpm dlx serve -s dist & npx lighthouse http://localhost:3000 --view",
    "compress:images": "pnpm dlx imagemin-cli \"public/**/*.{jpg,png,svg}\" --out-dir=public/optimized",
    "generate:pwa-icons": "bash ./scripts/generate-pwa-icons.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:detailed": "vitest run --coverage --reporter=verbose",
    "test:coverage:html": "vitest run --coverage --reporter=html  --reporter=lcov --outdir=coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "vitest --project=storybook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.0.1",
    "@mantine/dates": "^8.0.1",
    "@mantine/form": "^8.0.1",
    "@mantine/hooks": "^8.0.1",
    "@mantine/modals": "^8.0.1",
    "@mantine/notifications": "^8.0.1",
    "@tabler/icons-react": "^3.33.0",
    "@tanstack/react-query": "^5.76.1",
    "@tanstack/react-table": "^8.21.3",
    "@vitejs/plugin-react": "^4.4.1",
    "dayjs": "^1.11.13",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "localforage": "^1.10.0",
    "match-sorter": "^8.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.8.2",
    "sort-by": "^1.2.0",
    "vite": "^6.3.5",
    "web-vitals": "^5.0.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@storybook/addon-a11y": "9.0.5",
    "@storybook/addon-actions": "^9.0.5",
    "@storybook/addon-controls": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-onboarding": "9.0.5",
    "@storybook/addon-vitest": "9.0.5",
    "@storybook/react": "^9.0.5",
    "@storybook/react-vite": "^9.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/browser": "3.1.3",
    "@vitest/coverage-v8": "3.1.3",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "happy-dom": "^17.4.7",
    "imagemin-cli": "^8.0.0",
    "lighthouse": "^12.6.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "storybook": "^9.0.5",
    "terser": "^5.39.2",
    "typescript": "^5.8.3",
    "vite-plugin-bundle-analyzer": "^0.0.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-preload": "^0.4.2",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.3",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  }
}
